{% extends "base.twig" %}

{% block title %}Show -
	{{ parent() }}
{% endblock %}

{% block content %}
	<h2>Show</h2>
    <article>
        <header>
            <h1>{{ item.title }}</h1>
            <p><em>{{ item.created_at }}</em></p>
        </header>
        <section>
            <h2>{{ item.name }}</h2>
            <p>{{ item.description }}</p>
        </section>
        <footer>
            <p><strong>Slug:</strong> {{ item.slug }}</p>
            <p><strong>Status:</strong> {{ item.status ? 'Active' : 'Inactive' }}</p>
            <p><strong>More:</strong> {{ item.more ? 'Yes' : 'No' }}</p>
        </footer>
    </article>
{% endblock %}
