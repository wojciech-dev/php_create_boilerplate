{% extends "base.twig" %}

{% block title %}Home
	{{ parent() }}
{% endblock %}

{% block content %}
	<h1>strona główna</h1>

	<ul>
		{% for item in menu %}
			<li>
				<a href="{{ item.url }}">{{ item.title }}</a>
				{% if item.children %}
					<ul>
						{% for child in item.children %}
							{{ _self.renderMenuItem(child) }}
						{% endfor %}
					</ul>
				{% endif %}
			</li>
		{% endfor %}
	</ul>

	{% macro renderMenuItem(item) %}
		<li>
			<a href="{{ item.url }}">{{ item.title }}</a>
			{% if item.children %}
				<ul>
					{% for child in item.children %}
						{{ _self.renderMenuItem(child) }}
					{% endfor %}
				</ul>
			{% endif %}
		</li>
	{% endmacro %}


{% endblock %}
