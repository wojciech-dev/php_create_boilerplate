{% extends "admin/base.twig" %}

{% block title %}Body -
	{{ parent() }}
{% endblock %}

{% block content %}
	<h6>{{ secionName }}</h6>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Parent Id</th>
            <th>Name</th>
            <th>Title</th>
            <th>Description</th>
            <th>Slug</th>
            <th>Status</th>
            <th>More</th>
            <th>Photo 1</th>
            <th>Photo 2</th>
            <th>Photo 3</th>
            <th>Photo 4</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% if items %}
            {% for item in items %}
                <tr>
                    <td>{{ item.id }}</td>
                    <td>{{ item.parent_id }}</td>
                    <td>{{ item.name }}</td>
                    <td>{{ item.title }}</td>
                    <td>{% set description = item.description|striptags %}{% if description|length > 100 %}{{ description|slice(0, 100) ~ '...' }}{% else %}{{ description }}{% endif %}</td>
                    <td>{{ item.slug }}</td>
                    <td><span style="color: {{ item.status == 1 ? 'green' : 'red' }};">&#x25CF;</span></td>
                    <td><span style="color: {{ item.more == 1 ? 'green' : 'red' }};">&#x25CF;</span></td>
					<td><img src="{{ item.photo1 ? '/uploads/' ~ item.photo1 : 'data:image/svg+xml;charset=UTF-8,%3Csvg%20width%3D%2280%22%20height%3D%2280%22%20xmlns%3D%22http%3A//www.w3.org/2000/svg%22%3E%3Cg%3E%3Cline%20x1%3D%220%22%20y1%3D%220%22%20x2%3D%2280%22%20y2%3D%2280%22%20stroke%3D%22red%22%20stroke-width%3D%222%22/%3E%3Cline%20x1%3D%220%22%20y1%3D%2280%22%20x2%3D%2280%22%20y2%3D%220%22%20stroke%3D%22red%22%20stroke-width%3D%222%22/%3E%3C/g%3E%3C/svg%3E' }}" width="{{ item.photo1 ? '80' : '15' }}" height="{{ item.photo1 ? '' : '15' }}" alt="{{ item.photo1 ? 'Image' : 'No Image' }}"></td>
                    <td><img src="{{ item.photo2 ? '/uploads/' ~ item.photo2 : 'data:image/svg+xml;charset=UTF-8,%3Csvg%20width%3D%2280%22%20height%3D%2280%22%20xmlns%3D%22http%3A//www.w3.org/2000/svg%22%3E%3Cg%3E%3Cline%20x1%3D%220%22%20y1%3D%220%22%20x2%3D%2280%22%20y2%3D%2280%22%20stroke%3D%22red%22%20stroke-width%3D%222%22/%3E%3Cline%20x1%3D%220%22%20y1%3D%2280%22%20x2%3D%2280%22%20y2%3D%220%22%20stroke%3D%22red%22%20stroke-width%3D%222%22/%3E%3C/g%3E%3C/svg%3E' }}" width="{{ item.photo2 ? '80' : '15' }}" height="{{ item.photo2 ? '' : '15' }}" alt="{{ item.photo2 ? 'Image' : 'No Image' }}"></td>
                    <td><img src="{{ item.photo3 ? '/uploads/' ~ item.photo3 : 'data:image/svg+xml;charset=UTF-8,%3Csvg%20width%3D%2280%22%20height%3D%2280%22%20xmlns%3D%22http%3A//www.w3.org/2000/svg%22%3E%3Cg%3E%3Cline%20x1%3D%220%22%20y1%3D%220%22%20x2%3D%2280%22%20y2%3D%2280%22%20stroke%3D%22red%22%20stroke-width%3D%222%22/%3E%3Cline%20x1%3D%220%22%20y1%3D%2280%22%20x2%3D%2280%22%20y2%3D%220%22%20stroke%3D%22red%22%20stroke-width%3D%222%22/%3E%3C/g%3E%3C/svg%3E' }}" width="{{ item.photo3 ? '80' : '15' }}" height="{{ item.photo3 ? '' : '15' }}" alt="{{ item.photo3 ? 'Image' : 'No Image' }}"></td>
                    <td><img src="{{ item.photo4 ? '/uploads/' ~ item.photo4 : 'data:image/svg+xml;charset=UTF-8,%3Csvg%20width%3D%2280%22%20height%3D%2280%22%20xmlns%3D%22http%3A//www.w3.org/2000/svg%22%3E%3Cg%3E%3Cline%20x1%3D%220%22%20y1%3D%220%22%20x2%3D%2280%22%20y2%3D%2280%22%20stroke%3D%22red%22%20stroke-width%3D%222%22/%3E%3Cline%20x1%3D%220%22%20y1%3D%2280%22%20x2%3D%2280%22%20y2%3D%220%22%20stroke%3D%22red%22%20stroke-width%3D%222%22/%3E%3C/g%3E%3C/svg%3E' }}" width="{{ item.photo4 ? '80' : '15' }}" height="{{ item.photo4 ? '' : '15' }}" alt="{{ item.photo4 ? 'Image' : 'No Image' }}"></td>
                    <td>{{ item.created_at }}</td>
                    <td>
					<div class="buttons">
                        <a href="/admin/body/update/{{ item.id }}">Edit</a>
                        <button class="delete-body-button" data-id="{{ item.id }}">Delete</button>
					</div>
                    </td>
                </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td colspan="14" class="no-posts">NO POSTS</td>
            </tr>
        {% endif %}
    </tbody>
</table>
<div class="buttons">
    <a href="/admin/body/create/{{ section }}" class="green-button">Add record</a>
</div>


{% endblock %}

